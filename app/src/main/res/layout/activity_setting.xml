<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schema
        s.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingActivity">
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                    android:background="@color/green_100"
                    android:gravity="top"
        android:orientation="vertical">

            <ImageView android:layout_width="200dp" android:layout_height="100dp"
                       android:layout_marginTop="10dp"
                       android:layout_marginStart="14dp"
                       android:src="@drawable/setting_pic1" >

            </ImageView>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:orientation="horizontal">
                <ImageView android:layout_width="80dp" android:layout_height="80dp"
                           android:src="@drawable/setting_pic2"
                android:layout_marginStart="50dp">

                </ImageView>
                <ImageView android:layout_width="150dp" android:layout_height="100dp"
                           android:src="@drawable/setting_pic4"
                            >

                </ImageView>
                <ImageView android:layout_width="90dp" android:layout_height="90dp"
                           android:src="@drawable/setting_pic3"
                android:layout_marginTop="11dp">

                </ImageView>

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                            android:background="@drawable/setting_background"
                            android:orientation="vertical">
                <FrameLayout android:layout_width="match_parent" android:layout_height="60dp"
                                android:layout_marginTop="70dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="60dp"
                                  android:background="@color/green_200"
                                    android:orientation="horizontal">
                        <ImageView android:layout_width="30dp" android:layout_height="match_parent"
                                    android:src="@drawable/setting_pic5"
                                    android:layout_marginStart="20dp">

                        </ImageView>
                        <ImageView android:layout_width="100dp" android:layout_height="60dp"
                                   android:src="@drawable/setting_text1">

                        </ImageView>
                        <ImageView android:layout_width="20dp" android:layout_height="wrap_content"
                        android:src="@drawable/setting_pic8"
                        android:layout_marginStart="210dp">

                        </ImageView>



                    </LinearLayout>
                    <ImageButton android:layout_width="match_parent" android:layout_height="60dp"
                                 android:id="@+id/use_method"
                                 android:background="@color/translate"
                    >

                    </ImageButton>
                </FrameLayout>
                <LinearLayout android:layout_width="match_parent" android:layout_height="12dp"
                android:background="@color/green_200" android:gravity="center">
                    <ImageView android:layout_width="340dp" android:layout_height="12dp"
                               android:src="@drawable/setting_pic7">
                    </ImageView>
                </LinearLayout>



                <FrameLayout android:layout_width="match_parent" android:layout_height="60dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="60dp"
                                  android:background="@color/green_200"
                                  android:orientation="horizontal">
                        <ImageView android:layout_width="30dp" android:layout_height="match_parent"
                                   android:src="@drawable/setting_pic6"
                                   android:layout_marginStart="20dp">

                        </ImageView>
                        <ImageView android:layout_width="100dp" android:layout_height="60dp"
                        android:src="@drawable/setting_text2">

                        </ImageView>
                        <ImageView android:layout_width="20dp" android:layout_height="wrap_content"
                                   android:src="@drawable/setting_pic8"
                                   android:layout_marginStart="210dp">

                        </ImageView>


                    </LinearLayout>
                    <ImageButton android:layout_width="match_parent" android:layout_height="60dp"
                                    android:id="@+id/about_us"
                                    android:background="@color/translate"
                                    >

                    </ImageButton>
                </FrameLayout>


            </LinearLayout>



        </LinearLayout>


        <include layout="@layout/main_menu_setting"
                 android:layout_width="410dp"
                 android:layout_gravity="center"
                 android:layout_height="match_parent"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>