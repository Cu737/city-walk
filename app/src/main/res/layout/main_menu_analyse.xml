<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent" android:layout_height="match_parent"
>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom">
        <ImageView android:layout_width="wrap_content" android:layout_height="220dp"

                   android:src="@drawable/main_menu_pic6" android:contentDescription="@string/backgroud">

        </ImageView>


    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="210dp"
                  android:columnCount="5" android:rowCount="1"
                  android:layout_gravity="bottom">
        <ImageButton android:background="@drawable/main_menu_pic5" android:layout_height="60dp"
                     android:id="@+id/all_btn"
                     android:layout_width="60dp"
                     android:layout_marginTop="118dp"
                     android:src="@drawable/main_menu_button_change_small"
                     android:layout_marginStart="10dp" android:contentDescription="@string/all"/>
        <ImageButton android:background="@drawable/main_menu_pic1" android:layout_height="60dp"
                     android:id="@+id/add_btn"
                     android:layout_width="60dp"
                     android:layout_marginTop="58dp"
                     android:src="@drawable/main_menu_button_change_small"
                     android:layout_marginStart="10dp" android:contentDescription="@string/add"/>

        <ImageButton android:background="@drawable/main_menu_pic2"
                     android:id="@+id/analyse_btn"
                     android:layout_height="96dp" android:layout_width="96dp"
                     android:src="@drawable/main_menu_button_change_big"
                     android:layout_marginStart="25dp" android:contentDescription="@string/analyse"/>
        <ImageButton android:background="@drawable/main_menu_pic3" android:layout_height="60dp"
                     android:id="@+id/setting_btn"
                     android:layout_width="60dp"
                     android:layout_marginTop="58dp"
                     android:src="@drawable/main_menu_button_change_small"
                     android:layout_marginStart="25dp" android:contentDescription="@string/setting"/>
        <ImageButton android:background="@drawable/main_menu_pic4" android:layout_height="60dp"
                     android:id="@+id/dairy_btn"
                     android:layout_width="60dp"
                     android:layout_marginTop="118dp"
                     android:src="@drawable/main_menu_button_change_small"
                     android:layout_marginStart="1dp" android:contentDescription="@string/dairy"/>



    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="bottom">
        <ImageView android:layout_width="55dp" android:layout_height="55dp"
                   android:src="@drawable/sun"
                   android:layout_marginStart="100dp"
                   android:layout_marginBottom="30dp" android:contentDescription="@string/sun"/>
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="bottom">
        <ImageView android:layout_width="200dp" android:layout_height="55dp"
                   android:src="@drawable/main_menu_text2"
                   android:layout_marginStart="120dp"
                   android:layout_marginBottom="50dp" android:contentDescription="@string/analyse"/>
    </LinearLayout>

</FrameLayout>



