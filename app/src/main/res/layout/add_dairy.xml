<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent" android:layout_height="match_parent"
>


    <LinearLayout android:layout_width="match_parent" android:layout_height="1000dp"
                  android:layout_gravity="bottom"
                  android:orientation="vertical"
                  android:background="@drawable/add_diary_button_background"
                  android:paddingBottom="50dp">

        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:padding="20dp">
            <ImageView android:layout_width="match_parent"
                      android:layout_height="100dp"
                      android:src="@drawable/create_diary"
                      android:layout_alignParentTop="true"
                      android:layout_centerHorizontal="true"/>
            <ImageButton android:layout_width="40dp"
                         android:layout_height="40dp"
                         android:src="@drawable/add_diary_cancel"
                         android:background="0x00000000"
                         android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
        </RelativeLayout>


        <LinearLayout android:layout_width="match_parent" android:layout_height="300dp"
                      android:layout_gravity="center_horizontal"
                      android:background="@drawable/add_diary_button_shape"
                      android:orientation="horizontal"
                      android:layout_marginTop="10dp" android:layout_marginBottom="5dp"
                      android:layout_marginLeft="100dp" android:layout_marginRight="100dp"
                      android:padding="10dp">
            <ImageView android:layout_width="60dp" android:layout_height="60dp"
                       android:src="@drawable/add_diary_pic_input" android:layout_marginRight="8dp"/>
            <ImageView android:layout_width="300dp" android:layout_height="80dp"
                      android:src="@drawable/record_my_life"/>
        </LinearLayout>

        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="60dp">
            <ImageView android:layout_width="100dp" android:layout_height="100dp"
                       android:src="@drawable/add_diary_send"
                       android:layout_alignParentBottom="true"
                       android:layout_alignParentRight="true" android:layout_marginRight="100dp"
                       android:layout_marginBottom="5dp"/>
            <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:background="@drawable/add_diary_button_shape"
                            android:padding="40dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="88dp">
                <LinearLayout android:layout_width="250dp" android:layout_height="250dp"
                              android:orientation="vertical"
                              android:paddingTop="80dp"
                              android:paddingBottom="30dp"
                              android:background="@drawable/add_diary_dashbox">
                    <ImageView android:layout_width="90dp" android:layout_height="90dp"
                               android:src="@drawable/add_diary_camera"
                               android:layout_gravity="center_horizontal"/>
                    <ImageView android:layout_width="250dp" android:layout_height="80dp"
                              android:src="@drawable/add_photo"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

</FrameLayout>