        </activity>
        <activity
                android:name=".AnalyseActivity"
                android:exported="false">
            <meta-data
                    android:name="android.app.lib_name"
                    android:value=""/>
        </activity>
        <activity
                android:name=".SettingActivity"
                android:exported="false">
            <meta-data
                    android:name="android.app.lib_name"
                    android:value=""/>
        </activity>
        <activity
                android:name=".DiaryActivity"
                android:exported="false">
            <meta-data
                    android:name="android.app.lib_name"
                    android:value=""/>
